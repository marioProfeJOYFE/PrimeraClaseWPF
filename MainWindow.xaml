<Window x:Class="PrimeraClase.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PrimeraClase"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button
            
            Content="Boton" 
            HorizontalAlignment="Left" 
            Margin="374,0,0,0" 
            VerticalAlignment="Center" 
            Background="#FFD22B2B" 
            Click="Button_Click"
        />
        <TextBox
            x:Name="txtNombre"
            HorizontalAlignment="Left" 
            Margin="241,99,0,0" 
            TextWrapping="Wrap" 
            Text="" 
            VerticalAlignment="Top" 
            Width="120" 
            TextChanged="TextBox_TextUpperCase"
        />
        <TextBox
            x:Name="txtApellido"
            HorizontalAlignment="Left" 
            Margin="466,99,0,0" 
            TextWrapping="Wrap" 
            Text="" 
            VerticalAlignment="Top" 
            Width="120"
            TextChanged="TextBox_TextUpperCase"
        />
        <Label
            x:Name="lblResultado"
            Content="Label" 
            HorizontalAlignment="Center" 
            Margin="0,149,0,0" 
            VerticalAlignment="Top"
        />

    </Grid>
</Window>
